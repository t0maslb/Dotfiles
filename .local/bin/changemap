#!/bin/bash

case "$(cat /home/tlb/.local/bin/currentkeymap)" in
	"ES")
		kgb &
		notify-send -u low "Keymap switched to GB" &
		echo "GB" > /home/tlb/.local/bin/currentkeymap
		;;
	"GB")
		kes &
		notify-send -u low "Keymap switched to ES"
		echo "ES" > /home/tlb/.local/bin/currentkeymap
		;;
esac

