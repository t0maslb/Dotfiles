Print
	scrot "$HOME/pics/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png" & notify-send "Screenshot taken"

# screenshot
super + s
	selscrot

#screenshotS
super + shift + s ; {m,d,w,s}
	{selscrot,maim pic-full-"$HOME/pics/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png",maim -i "$HOME/pics/screenshots/$(xdotool getactivewindow)" pic-window-"$HOME/pics/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png",maim -s pic-selected-"$HOME/pics/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png"}

